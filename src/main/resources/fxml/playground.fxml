                      <columns>
                          <TableColumn editable="false" maxWidth="546.0" prefWidth="418.0" sortable="false" text="TransactionID" />
                          <TableColumn editable="false" maxWidth="401.0" minWidth="0.0" prefWidth="183.0" sortable="false" text="Balance" />
