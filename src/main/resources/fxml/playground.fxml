                           <rowConstraints>
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="Send">
                            <content>
                                <GridPane prefHeight="130.0" prefWidth="600.0">
                                    <children>
                                        <Label text="Address to send" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                            <GridPane.margin>
                                                <Insets left="10.0" right="10.0" top="10.0" />
